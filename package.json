{
  "name": "node-cli-boilerplate",
  "version": "0.0.1",
  "private": true,
  "main": "dist/",
  "scripts": {
    "compile": "babel ./src -d dist",
    "start": "better-npm-run start:prod",
    "dev": "better-npm-run start:dev",
    "watch": "better-npm-run start:watch",
    "test": "better-npm-run test",
    "test:unit": "better-npm-run test:unit",
    "test:regression": "better-npm-run test:regression",
    "test:smoke": "better-npm-run test:smoke",
    "prepublish": "npm run compile"
  },
  "betterScripts": {
    "start:prod": {
      "command": "node ./dist",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:dev": {
      "command": "node ./src",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:watch": {
      "command": "nodemon ./src",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "test": {
      "command": "nyc mocha ./test/unit-tests ./test/regression-tests ./test/smoke-tests",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:unit": {
      "command": "myc mocha ./test/unit-tests",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:regression": {
      "command": "nyc mocha ./test/regression-tests",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:smoke": {
      "command": "nyc mocha ./smoke-tests",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:clean": {
      "command": "node ./test/mocha.cleanup.js",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.11.6",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0"
  },
  "dependencies": {
    "better-npm-run": "0.0.10",
    "chai": "^3.5.0",
    "fs-extra-promise": "^0.4.0",
    "mocha": "^3.0.2",
    "nodemon": "^1.10.0",
    "nyc": "^7.1.0"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
